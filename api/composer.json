{
  "config": {
    "sort-packages": true
  },
  "require": {
    "php": ">=7.1.0",
    "ext-json": "^1.5",
    "ext-mbstring": "^7.1",
    "doctrine/migrations": "^2.2",
    "doctrine/orm": "^2.7",
    "laminas/laminas-config-aggregator": "^1.2",
    "laminas/laminas-diactoros": "^2.2",
    "psr/http-server-handler": "^1.0",
    "ramsey/uuid": "^3.9",
    "slim/slim": "^3.11",
    "symfony/console": "^4.4",
    "symfony/dotenv": "^4.1"
  },
  "require-dev": {
    "doctrine/data-fixtures": "^1.3",
    "phpunit/phpunit": "^7.5",
    "roave/security-advisories": "dev-master"
  },
  "autoload":{
    "psr-4": {
      "Api\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Api\\Test\\": "tests/"
    }
  },
  "scripts": {
    "app": "php bin/app.php --ansi",
    "test": "phpunit --colors=always"
  }
}
